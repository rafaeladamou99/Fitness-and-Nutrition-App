<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea">


    <ScrollView
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:text="Calories Remaining"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/Goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Goal"
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/goal0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/goal0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Goal"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/Goal"
                        app:layout_constraintStart_toStartOf="@+id/Goal" />

                    <TextView
                        android:id="@+id/food0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Food"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/Food"
                        app:layout_constraintStart_toStartOf="@+id/Food" />

                    <TextView
                        android:id="@+id/remaining0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Remaining"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/remaining" />

                    <TextView
                        android:id="@+id/Food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Food"
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/food0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/goal0"
                        app:layout_constraintEnd_toStartOf="@+id/Food"
                        app:layout_constraintStart_toEndOf="@+id/Goal"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Remaining"
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/remaining0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="="
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/remaining0"
                        app:layout_constraintEnd_toStartOf="@+id/remaining"
                        app:layout_constraintStart_toEndOf="@+id/Food"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="Breakfast"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/breakfastkcal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3" />

            <TextView
                android:id="@+id/breakfastkcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breakfastrecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/addBreakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:text="+ Add Food"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/breakfastrecycler" />


            <TextView
                android:id="@+id/textView161"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="Lunch"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/lunchkcal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addBreakfast" />

            <TextView
                android:id="@+id/lunchkcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addBreakfast" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lunchrecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView161" />

            <TextView
                android:id="@+id/addLunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:text="+ Add Food"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lunchrecycler" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="Dinner"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/dinnerkcal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addLunch" />

            <TextView
                android:id="@+id/dinnerkcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addLunch" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dinnerrecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dinnerkcal" />

            <TextView
                android:id="@+id/addDinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:text="+ Add Food"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dinnerrecycler" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="Snacks"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/snackkcal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addDinner" />

            <TextView
                android:id="@+id/snackkcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addDinner" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/snackrecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/snackkcal" />

            <TextView
                android:id="@+id/addSnack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:gravity="center"
                android:text="+ Add Food"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/snackrecycler" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:background="#fff"
        app:elevation="2dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_item"
        />



</androidx.constraintlayout.widget.ConstraintLayout>